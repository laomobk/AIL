// GuessTheNumber.ail

// guess number 726
// 726 means 2019 / 7 / 26
// This is the release date of Nezha.

begin

fun guess_it(number) is
	if number == 726 then
		return 0
	else if number < 726 then
		return 2
	else if number > 726 then
		return 1
		endif
	endif
	endif
end

print "Let's guess this number (300 ~ 1000)"
print "You have 5 lives!"

lives = 5

do
	input "Guess :" ; num

	s = guess_it(num)

	if s == 2 then
		print "too small!"
	endif

	if s == 1 then
		print "too large!!!"
	endif

	if (lives = lives - 1) == 0 then
		print "all lives run out!  game over!"
	endif
loop until s == 0

end
