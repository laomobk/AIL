/*
Draw Yanghui Triangle, original source code (java) from:
    https://www.cnblogs.com/JumperMan/p/6759422.html
*/

load 'printf'

fun printYanghuiTriangle(row) {
    for (i = 0; i < row; i = i + 1) {
        num = 1
        printf('%' + str((row - i) * 2) + 's', ' ')
        for (j = 0; j <= i; j = j + 1) {
            printf('%4d', num)
            num = int(num * (i - j) / (j + 1))
        }
        print ''
    }
}


if __main__ {
    row = 0
    while true {
        try {
            row = int(console.readln('row: '))
            break
        } catch _ {
            print 'try again!'
        }
    }
    printYanghuiTriangle(row)
}

